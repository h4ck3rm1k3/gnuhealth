<!-- Default template for permission groups -->

<tryton>
    <data>
        
<!-- BEGIN INVOICE ADMINISTRATION GROUP ACCESS RIGHTS -->
        
<!-- Create the Health invoice Administration group -->
        <record model="res.group" id="group_health_invoice_admin">
            <field name="name">Health Invoice Administration</field>
        </record>

<!-- Assign the Group to the "admin" user -->
        
        <record model="res.user-res.group" id="user_admin_group_health_invoice">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_health_invoice_admin"/>
        </record>

<!-- Access to Menus -->        

        <record model="ir.ui.menu-res.group" id="menu_health_group_health_invoice_admin">
            <field name="menu" ref="gnuhealth_invoice_menu"/>
            <field name="group" ref="group_health_invoice_admin"/>
        </record>

<!-- Access rights to models for the health invoice admin group -->

        <record model="ir.model.access" id="access_health_invoice_appointment_invoice_init_admin">
            <field name="model" search="[('model', '=', 'gnuhealth.appointment.invoice.init')]"/>
            <field name="group" ref="group_health_invoice_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <record model="ir.model.access" id="access_health_invoice_lab_test_invoice_init_admin">
            <field name="model" search="[('model', '=', 'gnuhealth.lab.test.invoice.init')]"/>
            <field name="group" ref="group_health_invoice_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

        <record model="ir.model.access" id="access_health_invoice_prescription_invoice_init_admin">
            <field name="model" search="[('model', '=', 'gnuhealth.prescription.invoice.init')]"/>
            <field name="group" ref="group_health_invoice_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        

<!-- END OF INVOICE ADMINISTRATION GROUP ACCESS RIGHTS -->

    </data>
</tryton>

<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>

        <record model="ir.ui.view" id="view_lab_make_invoice">
            <field name="model">gnuhealth.lab.test.invoice.init</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Create Lab Invoices">
                    <separator string="Do you want to generate the invoice(s) ?"
                        colspan="4" id="ask_invoice"/>
                    <newline/>
                    <separator string="Create Lab Invoices" colspan="6"
                        id="ask_invoice_create"/>
               </form>
               ]]>
            </field>
        </record>

        <record model="ir.action.wizard" id="action_create_lab_invoice">
            <field name="name">Create Lab Invoice</field>
            <field name="wiz_name">gnuhealth.lab.test.invoice</field>
            <field name="model">gnuhealth.patient.lab.test</field>
        </record>
        <record model="ir.action.keyword" id="action_create_lab_invoice_keyword">
            <field name="keyword">form_action</field>
            <field name="model">gnuhealth.patient.lab.test,-1</field>
            <field name="action" ref="action_create_lab_invoice"/>
        </record>

    </data>
</tryton>

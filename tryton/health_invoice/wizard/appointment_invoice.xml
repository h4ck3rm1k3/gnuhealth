<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>

        <record model="ir.ui.view" id="view_appointmentmake_invoice">
            <field name="model">gnuhealth.appointment.invoice.init</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Create invoices">
                    <separator string="Do you want to create the invoice(s) ?"
                        colspan="4" id="ask_appointment"/>
                    <newline/>
                    <separator string="" colspan="6" id="ask_appointment_create"/>
               </form>
               ]]>
            </field>
        </record>

        <record model="ir.action.wizard" id="action_create_appointment_invoice">
            <field name="name">Create Invoice</field>
            <field name="wiz_name">gnuhealth.appointment.invoice</field>
            <field name="model">gnuhealth.appointment</field>
        </record>
        <record model="ir.action.keyword" id="action_create_appointment_invoice_keyword">
            <field name="keyword">form_action</field>
            <field name="model">gnuhealth.appointment,-1</field>
            <field name="action" ref="action_create_appointment_invoice"/>
        </record>

    </data>
</tryton>

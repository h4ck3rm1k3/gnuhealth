<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>

        <record model="ir.ui.view" id="view_prescription_make_invoice">
            <field name="model">gnuhealth.prescription.invoice.init</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Create prescription invoices">
                    <separator string="Do you want to create the prescription invoice(s) ?"
                        colspan="4" id="ask_prescription"/>
                    <newline/>
                    <separator string="" colspan="6" id="ask_prescription_create"/>
               </form>
               ]]>
            </field>
        </record>

        <record model="ir.action.wizard" id="action_create_prescription_invoice">
            <field name="name">Create Prescription Invoice</field>
            <field name="wiz_name">gnuhealth.prescription.invoice</field>
            <field name="model">gnuhealth.prescription.order</field>
        </record>
        <record model="ir.action.keyword" id="action_create_prescription_invoice_keyword">
            <field name="keyword">form_action</field>
            <field name="model">gnuhealth.prescription.order,-1</field>
            <field name="action" ref="action_create_prescription_invoice"/>
        </record>

    </data>
</tryton>
